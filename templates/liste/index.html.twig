{% extends 'base.html.twig' %}

{% block title %}Liste index{% endblock %}

{% block body %}
<br />
<div class="container">
    <h2>Liste index</h2>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for liste in listes %}
            <tr>
                <td>{{ liste.id }}</td>
                <td>{{ liste.name }}</td>
                <td>{{ liste.city }}</td>
                <td>{{ liste.phone }}</td>
                <td>
                    <a href="{{ path('app_liste_show', {'id': liste.id}) }}">Show</a>
                    |
                    <a href="{{ path('app_liste_edit', {'id': liste.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No Records Found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_liste_new') }}">Create</a>
</div>
{% endblock %}
